{{#> page.layout page-class="home iframed generic-iframe developer" title-prefix="Develop"}}

	{{> page.framed-page }}


	<!-- Main add component dialog -->
	<div id="bl-add-component-dialog" class="bl-widget modal modal-fixed-footer" >
		<div class="modal-content">
			<div style="font-size: 1rem;top: -5px; padding:5px; text-align:center;;color:white;text-transform:uppercase;" class="blue accent-2">Add New Component</div>
			<form>
			<div class="row" style="padding:24px;">
				<div class="col s12">
					<div class="bl-widget input-field">
						<input value="" id="add_path" name="add_path" type="text" class="validate valid" style="background-color:#eee;padding-left:5px;">
						<label for="add_path" class="active">Component Path Name</label>
						<span class="field-description bl-textfield">
							Example: "my-component"<br>
							Lowercase preferred. No spaces or special characters.
						</span>
					</div>
				</div>
			</div>

			</form>
		</div>
		<div class="modal-footer">
			<a class="bl-add-button waves-effect waves-light blue btn" style="margin-left:10px;" href="javascript:;"><i class="material-icons left" style="margin-right: 12px;top: -1px;position: relative;left: 1px;">add_circle</i>Add Component</a>
			<a href="javascript:;" class="modal-close waves-effect waves-light red btn">Cancel</a>
		</div>
	</div>



	<!-- Main delete component dialog -->
	<div id="bl-delete-component-dialog" class="bl-widget modal modal-fixed-footer">
		<div style="font-size: 1rem;top: -5px; padding:5px; text-align:center;;color:white;text-transform:uppercase;" class="blue accent-2"><i class="material-icons dp32" style="top: 6px;position: relative;left: -8px;">warning</i> Confirm delete</div>


		<div class="modal-content" style="margin:24px;">
			Loading... <i class="fa fa-refresh fa-spin gray lighten-3"></i>
		</div>
		<div class="modal-footer">
			<a class="bl-delete-button waves-effect waves-light  red btn" style="margin-left:10px;" href="javascript:;"><i class="material-icons left" style="margin-right: 12px;top: -1px;position: relative;left: 1px;">delete</i>Delete</a>
			<a href="javascript:;" class="modal-close waves-effect waves-light blue btn">Cancel</a>
		</div>
	</div>


{{/page.layout}}